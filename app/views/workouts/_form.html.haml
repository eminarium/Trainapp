= form_for @workout do |f|
  - if @workout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout.errors.count, "error")} prohibited this workout from being saved:"
      %ul
        - @workout.errors.full_messages.each do |message|
          %li= message
      
  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .mb-3
    = f.label :category, class: "form-label"
    = f.collection_select :category_id, @categories, :id, :name, class: "form-control form-select"
  .mb-3
    = f.label :level, class: "form-label"
    = f.select :level, options_for_select(Workout.levels.map{ |k, v| [k, k]}), class: "form-control"
  .mb-3
    = f.label :description, class: "form-label"
    = f.text_area :description, class: "form-control"
  .actions
    = f.submit "Save", class: "btn btn-primary"
    = link_to "Back", workouts_path, class: "btn btn-warning"  