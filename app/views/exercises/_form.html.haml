= form_for @exercise do |f|
  - if @exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exercise.errors.count, "error")} prohibited this exercise from being saved:"
      %ul
        - @exercise.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .mb-3.form-group
    = f.label :category, class: "form-label"
    = f.collection_select :category_id, @categories, :id, :name, {}, { class: "form-select" }
  .mb-3
    = f.label :description, class: "form-label"
    = f.text_area :description, class: "form-control"
  .actions
    = f.submit "Save", class: "btn btn-primary"
    = link_to "Back", exercises_path, class: "btn btn-warning"